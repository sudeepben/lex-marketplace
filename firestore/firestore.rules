// VERY simple starter rules — we will tighten these later.
rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    function isSignedIn() { return request.auth != null; }

    match /orgs/{orgId}/apps/{appId} {
      // Public products can be read by anyone, other docs require auth.
      match /products/{productId} {
        allow read: if resource.data.visibility == 'public' || isSignedIn();
        // Owner-only writes (placeholder; we’ll improve with custom claims/roles)
        allow create, update, delete: if isSignedIn() && request.auth.uid == request.resource.data.ownerId;
      }

      // Everything else: require auth by default.
      match /{document=**} {
        allow read: if isSignedIn();
        allow write: if false; // locked down until we add specific rules
      }
    }
  }
}